<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textViewWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"

        android:fontFamily="@font/poppins_bold"
        android:text="Week 1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWeek"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/progress_cardView_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/sleep_visualization" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/linearLayout1Day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/textDay1"
                    android:background="@drawable/textview_circular_shape"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/textDay2"
                    android:background="@drawable/textview_circular_shape"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center"
                    android:paddingTop="6dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/textDay3"
                    android:text="3"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="16sp"
                    android:paddingTop="6dp"
                    android:gravity="center"
                    android:background="@drawable/textview_circular_shape"/>

                <View
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/textDay4"
                    android:text="4"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="16sp"
                    android:paddingTop="6dp"
                    android:gravity="center"
                    android:background="@drawable/textview_circular_shape"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2Day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/textDay5"
                    android:text="5"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="16sp"
                    android:paddingTop="6dp"
                    android:gravity="center"
                    android:background="@drawable/textview_circular_shape"/>

                <View
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/textDay6"
                    android:text="6"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="16sp"
                    android:paddingTop="6dp"
                    android:gravity="center"
                    android:background="@drawable/textview_circular_shape"/>

                <View
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/textDay7"
                    android:text="7"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="16sp"
                    android:paddingTop="6dp"
                    android:gravity="center"
                    android:background="@drawable/textview_circular_shape"/>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewNext"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="45dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:id="@+id/imgViewNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward_24" />
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>